<header class="header-wrap">
  <a class="logo" href="/">
    <img src="/static/images/logo.png" alt="LOGO">
  </a>
  <div class="search">
    <form action="/search/" method="get">
      <input type="text" name="value" value="">
      <input class="hidden-ipt"  type="text" name="type" value="article">
      <div class="select-box">
        <div class="select-value">
          <span>文章</span>
          <i class="iconfont icon-down"></i>
        </div>
        <ul>
          <li data-value="article">文章</li>
          <li data-value="video">视频</li>
          <li data-value="expert">专家</li>
        </ul>
      </div>
      <button type="submit" class="search-btn">
        <i class="iconfont icon-search"></i>
      </button>
    </form>
    {% if needSearchLinks == true %}
    <ul>
      <li><a href="/">泌尿肿瘤</a></li>
      <li><a href="/">尿石症</a></li>
    </ul>
    {% endif %}
  </div>
  <div class="profile">
    <button class="btn-login" id="btn_login">请登录</button>
    <button>
      <a href="/userdata/register/">免费注册</a>
    </button>
  </div>
</header>
