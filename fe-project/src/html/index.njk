    } : false
  });
  $('.section-professor .carousel-control-prev')
    .on('jcarouselcontrol:active', function() {
        $(this).removeClass('inactive');
    })
    .on('jcarouselcontrol:inactive', function() {
        $(this).addClass('inactive');
    })
    .on('click', function(e) {
        e.preventDefault();
    })
    .jcarouselControl({
        target: '-=1'
    });
  $('.section-professor .carousel-control-next')
