            <div class="contact">
              <div class="img">
                <img src="{{ "{{ fuzhuwei.weixinpic.url }}" }}" alt="微信二维码">
                <div>
                  微信二维码
                </div>
              </div>
              <div class="img">
                <img src="{{ "{{ fuzhuwei.weibopic.url }}" }}" alt="微博二维码">
                <div>
                  微博二维码
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="r-box r-box-hy">
      <div class="expert-detail-content">
        <div class="inner">
          <div class="box">
            <h2>个人介绍</h2>
            <div class="person">
              <div class="avatar">
                <img src="{{ "{{ huiyuan.smallpic.url }}" }}" alt="头像">
              </div>
              <div class="detail">
                <h3 class="name">{{ "{{ huiyuan.name }}" }}</h3>
                <div class="department">{{ "{{ huiyuan.department }}" }}</div>
              </div>
            </div>
            <p>{{ "{{ huiyuan.introduce }}" }}</p>
          </div>
          <div class="box">
            <h2>技术特长</h2>
            <p>{{ "{{ huiyuan.specialty }}" }}</p>
          </div>
          <div class="box">
            <h2>编后语</h2>
            <p>{{ "{{ huiyuan.postscript }}" }}</p>
          </div>
          <div class="box">
            <h2>联系方式</h2>
            <div class="contact">
              <div class="img">
                <img src="{{ "{{ huiyuan.weixinpic.url }}" }}" alt="微信二维码">
                <div>
                  微信二维码
                </div>
              </div>
              <div class="img">
                <img src="{{ "{{ huiyuan.weibopic.url }}" }}" alt="微博二维码">
                <div>
                  微博二维码
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="r-box r-box-lxfs">
      <h5>联系方式</h5>
      <div class="contact">
        <div class="img">
          <img src="{{ "{{ associntro.weixinpic.url }}" }}" alt="微信二维码">
          <div>
            微信二维码
          </div>
        </div>
        <div class="img">
          <img src="{{ "{{ associntro.weibopic.url }}" }}" alt="微博二维码">
          <div>
            微博二维码
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

{% endblock %}

{% block javascript %}
<script type="text/javascript">
  $(function () {
    $('.left-bar ul li').click(function () {
      $('.left-bar ul li').removeClass('active');
      $(this).addClass('active');
      $('.right-content>.r-box').hide();
      $('.right-content>.r-box-' + $(this).attr('data-u')).show();
    });
  });
</script>
{% endblock %}
