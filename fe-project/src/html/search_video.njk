{% set needSearchLinks = false %}
{% extends './components/layout.njk' %}
{% block title %}视频列表{% endblock %}
{% block stylesheet %}
<link rel="stylesheet" href="/static/css/video.css">
{% endblock %}

{% block content %}
<script type="text/javascript">
  window.isVideo = true;
</script>
<div class="video-container">
  <ul class="video-list clearfix">
    {{ '\
    {% for i in objects %}\
    ' | safe }}
    <li>
      {{ '
      <a href="/{{tmpurl}}/{{i.id}}">
      {% if column %}
      {% else %}
      <a href="/{{tmpurl}}/{{ i.column_id }}/{{i.id}}">
      {% endif %}
      ' | safe }}
        <img src="/media/{{ '{{ i.smallpic }}' }}" />
        <div class="content">
          <h2>{{ '{{ i.title|slice:"30" }}' | safe }}</h2>
          <div class="meta">
            <time>{{ '{{ i.pub_date|date:"Y-m-d" }}' | safe }}</time>
            <span>{{ "{{ i.expert }}" }}</span>
          </div>
          <p>{{ '{{ i.introduction|slice:"75" }}' | safe }}</p>
        </div>
      </a>
    </li>
    {{ '\
    {% endfor %}\
    ' | safe }}
  </ul>
</div>
<br>
<br>
<br>
{% endblock %}

{% block javascript %}
{% endblock %}
